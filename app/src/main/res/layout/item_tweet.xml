<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent">


    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/ivProfileImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tvUserName"
        android:layout_alignParentTop="true"
        android:textSize="13sp"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/ivProfileImage"
        android:layout_toEndOf="@+id/ivProfileImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCreatedAT"
        android:textColor="#000000"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivTypeOfBody"
        android:padding="3dp"
        android:background="@drawable/ic_web_link"
        android:layout_toLeftOf="@+id/tvCreatedAT"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvScreenName"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:layout_toRightOf="@+id/ivProfileImage"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:layout_below="@+id/tvUserName"
        android:layout_alignBottom="@+id/ivProfileImage"
        android:textSize="11sp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tvBody"
        android:textSize="12sp"
        android:textColor="#000000"
        android:paddingLeft="5dp"
        android:paddingBottom="10dp"
        android:clickable="true"
        android:autoLink="web"
        android:textColorLink="@color/twitter_blue"
        android:layout_below="@+id/tvScreenName"
        android:layout_toRightOf="@+id/ivProfileImage"
        android:layout_toEndOf="@+id/ivProfileImage"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivFavoriteImage"
        android:clickable="true"
        android:background="@drawable/iconmonstr_star_unfilled"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/tvBody"
        android:layout_alignLeft="@+id/tvBody"
        android:layout_alignStart="@+id/tvBody"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/tvFavoriteCount"
        android:paddingLeft="5dp"
        android:textSize="14sp"
        android:textColor="@color/twitter_text_color"
        android:layout_alignTop="@+id/ivFavoriteImage"
        android:layout_alignBottom="@+id/ivFavoriteImage"
        android:layout_toRightOf="@+id/ivFavoriteImage"
        android:layout_toEndOf="@+id/ivFavoriteImage"/>

</RelativeLayout>